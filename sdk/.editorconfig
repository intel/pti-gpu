root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,cc,h}]
indent_style = space
indent_size = 2
max_line_length = 100

[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 2
max_line_length = 80

[*.py]
indent_style = space
indent_size = 4
profile = black
